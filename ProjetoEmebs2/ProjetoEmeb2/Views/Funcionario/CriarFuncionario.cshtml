@model FuncionarioModel

@{
    var vNome = "";
    var vIp = "";
    var vMac = "";
    var vEmail = "";
    var vRamal = "";
    var vId = 0;
    var vSetor = "";
    var vAndar = "";

    try
    {
        vId = int.Parse(@ViewBag.Registro.idFunc.ToString());
        vNome = @ViewBag.Registro.Nome.ToString();
        vIp = @ViewBag.Registro.Ip.ToString();
        vMac = @ViewBag.Registro.Mac.ToString();
        vRamal = @ViewBag.Registro.Ramal.ToString();
        vSetor = @ViewBag.Registro.Setor.ToString();
        vAndar = @ViewBag.Registro.Andar.ToString();
        vEmail = @ViewBag.Registro.Email.ToString();

    }
    catch { }

}

<script src="~/js/jquery-3.3.1.js" type="text/javascript"></script>
<script src="~/js/jquery.maskedinput.js" type="text/javascript"></script>


<script>
    jQuery(function ($) {
        $("#IP").mask("999.999.9.99", { placeholder: "###.###.#.##" }, { maxlength: "12" });
        $("#MAC").mask("99:99:99:99:99:99", { placeholder: "##:##:##:##:##:##" }, { maxlength: "17" });

    });
</script>

