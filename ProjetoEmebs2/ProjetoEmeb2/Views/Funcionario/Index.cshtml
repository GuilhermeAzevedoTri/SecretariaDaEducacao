<h2>Funcionarios Cadastrados</h2>

<table class="table table-bordered table-condensed table-striped" id="FUNC" >

    <thead class="btn-primary">
        <tr>
            <th>#</th>
            <th>#</th>
            <th>Nome</th>
            <th>IP</th>
            <th>MAC</th>
            <th>Email</th>
            <th>Ramal</th>
            <th>Setor</th>
            <th>Andar</th>
        </tr>
    </thead>
    @{
        foreach (var item in (List<FuncionarioModel>)ViewBag.ListaFuncionario)
        {
            <tbody>
                <tr>
                    <td width="60"><button type="button" class="btn btn-danger" onclick="Excluir(@item.idFunc.ToString())">Excluir</button></td>
                    <td width="60"><button type="button" class="btn btn-warning" onclick="Editar(@item.idFunc.ToString())">Editar</button></td>
                    <td>@item.Nome.ToString()</td>
                    <td>@item.Ip.ToString()</td>
                    <td>@item.Mac.ToString()</td>
                    <td>@item.Email.ToString()</td>
                    <td>@item.Ramal.ToString()</td>
                    <td>@item.Setor.ToString()</td>
                    <td>@item.Andar.ToString()</td>
                </tr>
            </tbody>

        }

    }
</table>

<button type="button" class="btn btn-block btn-success" onclick="CriarFuncionario()">Cadastrar Novo Funcionario</button>

<script>
    function CriarFuncionario() {
        window.location.href = "../Funcionario/CriarFuncionario";

    }
    function Excluir(id_funcionario) {
        window.location.href = "../Funcionario/ExcluirFuncionario/" + id_funcionario;
    }
    function Editar(id_funcionario) {
        window.location.href = "../Funcionario/CriarFuncionario/" + id_funcionario;

    }
</script>

