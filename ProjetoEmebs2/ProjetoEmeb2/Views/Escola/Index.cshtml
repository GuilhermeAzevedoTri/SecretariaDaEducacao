    ViewData["Title"] = "Index";
}

<script src="~/js/jquery-3.3.1.js" type="text/javascript"></script>
<script src="~/js/jquery.maskedinput.js" type="text/javascript"></script>
<script src="~/js/datatables.min.js" type="text/javascript"></script>
<script src="~/js/datatables.js" type="text/javascript"></script>

<script>
    jQuery(function ($) {


        $("#ESCOLA").DataTable({
            "language": {
                "lengthMenu": "Exibindo MENU registros por página",
                "info": "Mostrando página <strong style='font-size:13pt;'>_PAGE_</strong> de _PAGES_",
                "infoEmpty": "Nenhum registro disponível",
                "infoFiltered": "(filtrado de MAX registros no total)",
                "sInfoPostFix": "",
                "sInfoThousands": ".",
                "sLoadingRecords": "Carregando...",
                "sProcessing": "Processando...",
                "sZeroRecords": "Nenhum registro encontrado",
                "sSearch": "Pesquisar ",
                "oPaginate": {
                    "sNext": " Próximo ",
                    "sPrevious": "Anterior ",
                    "sFirst": "Primeiro",
                    "sLast": "Último"
                },
                "oAria": {
                    "sSortAscending": ": Ordenar colunas de forma ascendente",
                    "sSortDescending": ": Ordenar colunas de forma descendente"

                }
            }
        });
    });
</script>

<h2>Escolas Cadastradas</h2>

<table class="table table-bordered table-condensed table-striped" id="ESCOLA">

    <thead class="btn-primary">
        <tr>
            <th>#</th>
            <th>#</th>
            <th>Escola</th>
            <th>Endereço</th>
            <th>N°</th>
            <th>Bairro</th>
            <th>Cep</th>
            <th>Telefones</th>
            <th>Email</th>
            <th>IP</th>
        </tr>
    </thead>
    @{
        foreach (var item in (List<EscolaModel>)ViewBag.ListaEscola)
        {
            <tbody>
                <tr>
                    <td width="40"><button type="button" class="btn btn-warning" onclick="Editar(@item.idEscola.ToString())">Editar</button></td>
                    <td width="40"><button type="button" class="btn btn-info" onclick="Visualizar(@item.idEscola.ToString())">Visualizar</button></td>
                    <td>@item.Nome.ToString()</td>
                    <td>@item.Endereco.ToString()</td>
                    <td width="30">@item.Numero.ToString()</td>
                    <td>@item.Bairro.ToString()</td>
                    <td>@item.Cep.ToString()</td>
                    <td>@item.Telefone.ToString() / @item.Telefone2.ToString()</td>
                    <td>@item.Email.ToString()</td>
                    <td>@item.IP.ToString()</td>
                    
                </tr>
            </tbody>

        }

    }
</table>

<button type="button" class="btn btn-block btn-success" onclick="CriarEscola()">Cadastrar Nova Escola</button>

<script>
    function Visualizar(id_escola) {
        window.location.href = "../Escola/Visualizar/" + id_escola;
    }
    function CriarEscola() {
        window.location.href = "../Escola/CriarEscola";

    }
    function Excluir(id_escola) {
        window.location.href = "../Escola/ExcluirEscola/" + id_escola;
    }
    function Editar(id_escola) {
        window.location.href = "../Escola/CriarEscola/" + id_escola;

    }
</script>
